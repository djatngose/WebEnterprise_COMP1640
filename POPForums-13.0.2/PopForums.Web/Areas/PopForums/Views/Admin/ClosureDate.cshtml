@model PopForums.Models.ClosureDateClass

@{

    Layout = "~/Areas/PopForums/Views/Admin/AdminMaster.cshtml";
}


<h1>Setting - Closure Date For Ideas</h1>

@using (Html.BeginForm("AddClosureDate", "Admin", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Closure Date</label>
            <div class="col-sm-10">@Html.TextBox("closureDate", Model != null ? Model.ClosureDate.ToShortDateString() : "", new {@class = "form-control"})</div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Closure Date</label>
            <div class="col-sm-10">@Html.TextBox("finalClosureDate", Model != null ? Model.FinalClosureDate.ToShortDateString() : "", new { @class = "form-control" })</div>
        </div>
        <div class="form-group">
            <div class="col-sm-push-2 col-sm-10">
                <input id="btnCategory" type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>

    </div>



}